{
    "name": "aaharu/curlsoapclient",
    "type": "library",
    "description": "A SoapClient wrapper that uses ext-curl.",
    "keywords": ["soap", "soap-client", "curl", "client", "web service"],
    "license": "MIT",
    "authors": [
        {
            "name": "aaharu",
            "email": "aaharu@hotmail.com",
            "homepage": "https://www.aaharu.com/"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-soap": "*",
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {
            "Aaharu\\Soap\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "friendsofphp/php-cs-fixer": "^2.14"
    },
    "scripts": {
        "test": "phpunit",
        "format": "php-cs-fixer fix --rules=@PSR2 src"
    },
    "archive": {
        "exclude": [
            "tests/",
            "phpunit.xml.dist"
        ]
    }
}
